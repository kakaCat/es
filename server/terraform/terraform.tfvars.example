# Example Terraform variables file
# Copy this file to terraform.tfvars and adjust values as needed

# Kubernetes configuration
kubeconfig_path = "~/.kube/config"
kube_context    = "docker-desktop"  # or "kind-kind" for Kind cluster

# Namespace
namespace = "es-serverless"

# Elasticsearch configuration
elasticsearch_replicas      = 3
elasticsearch_storage_size  = "10Gi"
storage_class              = "hostpath"  # or "standard" for GKE, "gp2" for EKS

elasticsearch_resources = {
  requests = {
    cpu    = "1000m"
    memory = "2Gi"
  }
  limits = {
    cpu    = "2000m"
    memory = "4Gi"
  }
}

# Control plane images
manager_image           = "es-serverless-manager:latest"
shard_controller_image  = "shard-controller:latest"
reporting_service_image = "reporting-service:latest"

# Monitoring
prometheus_enabled         = true
grafana_enabled           = true
prometheus_retention_days = 15

# Logging
fluentd_enabled = true
